<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Gentelella Alela! | </title>

    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <%= link to: page_path(@conn, :index), class: "site_title" do %>
                <i class="fa fa-paw"></i>
                <span>Gentellela Alela!</span>
              <% end %>
            </div>

            <div class="clearfix"></div>

            <!-- menu profile quick info -->
            <%= render_shared "_menu_profile_quick_info.html", conn: @conn %>
            <!-- /menu profile quick info -->

            <!-- sidebar menu -->
            <%= render_shared "_sidebar.html", conn: @conn %>
            <!-- /sidebar menu -->

          </div>
        </div>

        <!-- top navigation -->
        <%= render_shared "_top_navigation.html", conn: @conn %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
          <%= render @view_module, @view_template, assigns %>
        </div>
        <!-- /page content -->

        <!-- footer content -->
        <%= render_shared "_footer.html" %>
        <!-- /footer content -->
      </div>
    </div>

    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
